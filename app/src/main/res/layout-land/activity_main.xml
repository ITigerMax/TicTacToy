<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/game_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/field_name"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/top_left_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="doGame"
            android:textSize="50sp" />

        <Button
            android:id="@+id/top_center_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="doGame"
            android:textSize="50sp" />

        <Button
            android:id="@+id/top_right_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="doGame"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/center_left_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="doGame"
            android:textSize="50sp" />

        <Button
            android:id="@+id/center_center_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="doGame"
            android:textSize="50sp" />

        <Button
            android:id="@+id/center_right_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="doGame"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bottom_left_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="doGame"
            android:textSize="50sp" />

        <Button
            android:id="@+id/bottom_center_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="doGame"
            android:textSize="50sp" />

        <Button
            android:id="@+id/bottom_right_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="doGame"
            android:textSize="50sp" />

    </LinearLayout>

</LinearLayout>