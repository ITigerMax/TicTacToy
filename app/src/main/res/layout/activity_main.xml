<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp">

        <TextView
            android:id="@+id/game_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gameStatus"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/top_left_btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:textSize="50dp"
            android:background="@color/colorAccent"
            android:onClick="doGame"/>

        <Button
            android:id="@+id/top_center_btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:textSize="50dp"
            android:background="@color/colorAccent"
            android:onClick="doGame"/>

        <Button
            android:id="@+id/top_right_btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:textSize="50dp"
            android:background="@color/colorAccent"
            android:onClick="doGame"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/center_left_btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:textSize="50dp"
            android:background="@color/colorAccent"
            android:onClick="doGame"/>

        <Button
            android:id="@+id/center_center_btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:textSize="50dp"
            android:background="@color/colorAccent"
            android:onClick="doGame"/>

        <Button
            android:id="@+id/center_right_btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:textSize="50dp"
            android:background="@color/colorAccent"
            android:onClick="doGame"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bottom_left_btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:textSize="50dp"
            android:background="@color/colorAccent"
            android:onClick="doGame"/>

        <Button
            android:id="@+id/bottom_center_btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:textSize="50dp"
            android:background="@color/colorAccent"
            android:onClick="doGame"/>

        <Button
            android:id="@+id/bottom_right_btn"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:textSize="50dp"
            android:background="@color/colorAccent"
            android:onClick="doGame"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created by Max Vasilenko"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

</LinearLayout>